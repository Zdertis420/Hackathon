from os import listdir

files = [f for f in listdir("D:\\Users\Student\Documents\Хакатон\docs\docs\\utf8")]

lists = []

for file in files:
    with open(f"D:/Users/Student/Documents/Хакатон/docs/docs/utf8/{file}", mode = 'r', encoding = 'utf-8') as f:
        f = f.readlines()
        lists.append(f)

for list in lists:
    for i in range(len(list) - 1):
        list[i] = list[i][:-2]

s = []

for list in lists:
    for string in list:
        string = list(map(lambda a: a = "", string))

for list in lists:
    words = []
    for string in list:
        if string:
            words.extend(string.split())
    if words:
        s.append(words)

